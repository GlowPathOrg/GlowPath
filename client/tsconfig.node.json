{
  "compilerOptions": {
    "target": "ES2020",  // Adjust to ES2020 or ES2021 (ES2023 may not be supported)
    "lib": ["ES2020"],   // Adjust to ES2020 or ES2021 based on your needs
    "module": "ESNext",  // Keep as "ESNext" unless you need compatibility with older module systems
    "skipLibCheck": true,

    /* Module Resolution */
    "moduleResolution": "node",  // "Bundler" is not valid, change to "node"
    "isolatedModules": true,     // Useful if you're working with isolated modules (e.g., React or Vite)
    "noEmit": true,              // Prevents emitting files (useful when using bundlers like Vite)

    /* Linting and Strict Checks */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* For incremental builds (if you want this feature) */
    "incremental": true,   // Enable incremental builds to track changes and optimize builds
    "composite": true,     // Enable composite projects if needed


  },
  "include": ["vite.config.ts"]  // Include your Vite configuration
}
