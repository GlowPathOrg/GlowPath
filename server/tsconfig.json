{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES2021",                                   /* Set to a broadly supported JavaScript version. */
    "lib": ["ES2021"],                                    /* Specify a supported set of libraries. */
    "moduleDetection": "force",                           /* Control how TypeScript detects module-format JS files. Optional. */

    /* Modules */
    "module": "commonjs",                                 /* CommonJS for Node.js compatibility. */
    "moduleResolution": "node",                           /* How TypeScript looks up a file from a given module specifier. */
    "typeRoots": ["node_modules/@types", "src/types"],    /* Specify multiple folders that act like './node_modules/@types'. */

    /* Interop Constraints */
    "esModuleInterop": true,                              /* Enable interop between CommonJS and ES6 modules. */
    "forceConsistentCasingInFileNames": false,            /* Ensure correct casing in imports. */

    /* Emit */
    "outDir": "./dist",                                   /* Specify an output folder for all emitted files. */

    /* Type Checking */
    "strict": true,                                       /* Enable all strict type-checking options. */
    "skipLibCheck": true                                  /* Skip type checking of all .d.ts files for faster builds. */
  }
}
