{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["es2022"],  // or "es2021" if you're targeting an earlier version
    "moduleResolution": "node",  // Valid options: "node", "classic", "node16", "nodenext"
    "outDir": "./dist",  // Ensure this points to your correct build output directory
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": false,
    "skipLibCheck": true
  }
}
